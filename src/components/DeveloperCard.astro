---
interface Props {
	name: string;
	github: string;
	linkedin: string;
	description: string;
	image: string;
}

const { name, github, linkedin, description, image } = Astro.props;
---

<div class="developer-card">
	<img src={image} alt={`Photo of ${name}`} class="developer-photo" />
	<h3 class="text-gradient-reversed">{name}</h3>
	<p>{description}</p>
	<div class="social-icons">
		<a
			href={github}
			target="_blank"
			rel="noopener noreferrer"
			aria-label="GitHub"
		>
			<svg viewBox="0 0 24 24" class="icon">
				<defs>
					<linearGradient
						id="gradient"
						x1="0%"
						y1="0%"
						x2="100%"
						y2="100%"
					>
						<stop
							offset="0%"
							style="stop-color:rgb(var(--accent-light));stop-opacity:1"
						></stop>
						<stop
							offset="70%"
							style="stop-color:rgb(var(--accent));stop-opacity:1"
						></stop>
					</linearGradient>
				</defs>
				<path
					d="M12 0C5.37 0 0 5.37 0 12c0 5.303 3.438 9.8 8.205 11.387.6.111.82-.261.82-.58 0-.287-.011-1.046-.017-2.053-3.338.724-4.042-1.61-4.042-1.61-.546-1.386-1.332-1.755-1.332-1.755-1.087-.744.083-.729.083-.729 1.203.084 1.837 1.236 1.837 1.236 1.07 1.835 2.807 1.305 3.492.997.108-.775.419-1.305.762-1.605-2.665-.305-5.467-1.332-5.467-5.931 0-1.31.468-2.381 1.236-3.221-.124-.304-.535-1.527.118-3.176 0 0 1.008-.322 3.301 1.23a11.49 11.49 0 0 1 3.003-.404c1.02.004 2.045.138 3.003.404 2.291-1.552 3.297-1.23 3.297-1.23.655 1.649.244 2.872.12 3.176.77.84 1.236 1.911 1.236 3.221 0 4.61-2.807 5.624-5.479 5.921.429.37.81 1.102.81 2.222 0 1.604-.015 2.896-.015 3.293 0 .322.218.696.824.577C20.565 21.795 24 17.299 24 12 24 5.37 18.63 0 12 0z"
				></path>
			</svg>
		</a>
		<a
			href={linkedin}
			target="_blank"
			rel="noopener noreferrer"
			aria-label="LinkedIn"
		>
			<svg viewBox="0 0 24 24" class="icon">
				<path
					d="M22.23 0H1.77C.79 0 0 .77 0 1.73v20.54C0 23.23.79 24 1.77 24h20.46c.98 0 1.77-.77 1.77-1.73V1.73C24 .77 23.21 0 22.23 0zM7.09 20.45H3.56V9.01h3.53v11.44zM5.32 7.58a2.05 2.05 0 1 1 0-4.1 2.05 2.05 0 0 1 0 4.1zM20.45 20.45h-3.53v-5.81c0-1.38-.03-3.17-1.94-3.17-1.95 0-2.24 1.52-2.24 3.08v5.9h-3.53V9.01h3.38v1.56h.05c.47-.89 1.63-1.83 3.35-1.83 3.58 0 4.24 2.36 4.24 5.43v6.27z"
				></path>
			</svg>
		</a>
	</div>
</div>

<style>
	.developer-card {
		background: rgba(255, 255, 255, 0.1);
		border: 1px solid rgba(255, 255, 255, 0.2);
		padding: 1rem;
		border-radius: 8px;
		text-align: center;
		flex: 1;
		display: flex;
		flex-direction: column;
		justify-content: flex-start;
		max-width: 300px;
		transition: transform 0.3s ease, box-shadow 0.3s ease, background 0.3s ease;
	}

	.developer-card:hover {
		transform: translateY(-10px);
		box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
		background: rgba(255, 255, 255, 0.2);
	}

	.developer-card img.developer-photo {
		width: 100px;
		height: 100px;
		border-radius: 50%;
		margin-bottom: 0.5rem;
		align-self: center;
	}

	.developer-card h3 {
		margin: 0 0 0.5rem;
		font-size: 1.5rem;
		color: rgb(var(--accent));
	}

	.developer-card p {
		margin: 0 0 0.5rem;
		font-size: 1rem;
		flex-grow: 1;
	}

	.social-icons {
		display: flex;
		justify-content: center;
		gap: 1rem;
	}

	.icon {
		width: 24px;
		height: 24px;
		fill: url("#gradient");
		animation: scaleDown 0.1s linear forwards;
	}

	.icon:hover {
		animation: scaleUp 0.15s linear forwards;
	}

	@keyframes scaleDown {
		from {
			scale: 1.1;
		}
		to {
			scale: 1.0;
		}
	}

	@keyframes scaleUp {
		from {
			scale: 1.0;
		}
		to {
			scale: 1.1;
		}
	}
</style>
